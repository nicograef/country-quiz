{
  "name": "country-quiz",
  "version": "0.5.2",
  "description": "Create quiz games with questions about countries, flags and capitals.",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "prettier-standard --lint src/**/*.js",
    "prebuild": "rimraf dist",
    "build": "rollup --config",
    "postbuild": "cp dist/bundle.umd.js demo/",
    "docs": "jsdoc src/index.js -d docs/ -t node_modules/minami",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard --lint",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nicograef/country-quiz.git"
  },
  "keywords": [
    "quiz",
    "game",
    "countries",
    "flags",
    "api"
  ],
  "author": "Nico Gr√§f",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nicograef/country-quiz/issues"
  },
  "homepage": "https://nicograef.github.io/country-quiz",
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@types/jest": "^24.0.18",
    "coveralls": "^3.0.6",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "lint-staged": "^9.4.1",
    "minami": "^1.2.3",
    "node-fetch": "^3.3.2",
    "prettier-standard": "^15.0.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.22.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2"
  }
}
